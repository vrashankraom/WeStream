<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.westream">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.ChatActivity"></activity>
        <activity android:name=".Activities.MessagesPage" />
        <activity android:name=".Activities.SetupProfileActivity" />
        <activity
            android:name=".Activities.OTPActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".Activities.PhoneNumberActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity android:name=".Activities.DashboardActivity" />
        <activity
            android:name=".SignupActivity"
            android:label="New Account" />
        <activity
            android:name=".LoginActivity"
            android:label="Login" />
        <activity
            android:name=".Activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>